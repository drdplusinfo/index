{
    "name": "drdplus/index",
    "license": "MIT",
    "type": "page",
    "description": "List of Drd+ rules and related sites",
    "keywords": [
        "Drd plus",
        "rules",
        "sites"
    ],
    "autoload": {
        "psr-4": {
            "DrdPlus\\": "DrdPlus/"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "drdplus/rules-skeleton": "^3.2"
    },
    "require-dev": {
        "composer/composer": "^1.8",
        "granam/exceptions-hierarchy": "^5.0",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "^9.3",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "pre-autoload-dump": [
            "rm -f DrdPlus/Tests/RulesSkeleton && ln -s ../../vendor/drdplus/rules-skeleton/DrdPlus/Tests/RulesSkeleton DrdPlus/Tests/"
        ]
    }
}
